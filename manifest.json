{
  "manifest_version": 2,
  "name": "Canonical",
  "description": "If a page has a canonical rel link, provide a quick way to navigate to it.",
  "version": "1.2",
  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "128": "logo128.png"
  },
  "page_action": {
    "default_icon": "logo16.png"
  },
  "content_scripts": [
    {
      "js": [
        "sniff_common.js"
      ],
      "matches": [
        "http://*/*"
      ],
      "run_at": "document_end"
    }
  ]
}